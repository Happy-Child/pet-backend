{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/exceptions/(.*)": "<rootDir>/../libs/exceptions/src/$1",
    "@app/exceptions": "<rootDir>/../libs/exceptions/src",
    "@app/constants/(.*)": "<rootDir>/../libs/constants/src/$1",
    "@app/constants": "<rootDir>/../libs/constants/src",
    "@app/entities/(.*)": "<rootDir>/../libs/entities/src/$1",
    "@app/entities": "<rootDir>/../libs/entities/src",
    "@app/auth/(.*)": "<rootDir>/../libs/auth/src/$1",
    "@app/auth": "<rootDir>/../libs/auth/src",
    "@app/decorators/(.*)": "<rootDir>/../libs/decorators/src/$1",
    "@app/decorators": "<rootDir>/../libs/decorators/src",
    "@app/mail-sender/(.*)": "<rootDir>/../libs/mail-sender/src/$1",
    "@app/mail-sender": "<rootDir>/../libs/mail-sender/src",
    "@app/pug/(.*)": "<rootDir>/../libs/pug/src/$1",
    "@app/pug": "<rootDir>/../libs/pug/src",
    "@app/helpers/(.*)": "<rootDir>/../libs/helpers/src/$1",
    "@app/helpers": "<rootDir>/../libs/helpers/src",
    "@app/dtos/(.*)": "<rootDir>/../libs/dtos/src/$1",
    "@app/dtos": "<rootDir>/../libs/dtos/src",
    "@app/repositories/(.*)": "<rootDir>/../libs/repositories/src/$1",
    "@app/repositories": "<rootDir>/../libs/repositories/src",
    "@app/interfaces/(.*)": "<rootDir>/../libs/interfaces/src/$1",
    "@app/interfaces": "<rootDir>/../libs/interfaces/src",
    "@app/types/(.*)": "<rootDir>/../libs/types/src/$1",
    "@app/types": "<rootDir>/../libs/types/src"
  }
}