{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/exceptions/(.*)": "<rootDir>/../libs/exceptions/src/$1",
    "@app/exceptions": "<rootDir>/../libs/exceptions/src",
    "@app/constants/(.*)": "<rootDir>/../libs/constants/src/$1",
    "@app/constants": "<rootDir>/../libs/constants/src",
    "@app/entities/(.*)": "<rootDir>/../libs/entities/src/$1",
    "@app/entities": "<rootDir>/../libs/entities/src"
  }
}